  <story>
    <asA>Mobile User</asA>
    <iWant>to view planning pages on my phone without horizontal scrolling</iWant>
    <soThat>I can manage orders on the go</soThat>
    <tasks>
      <task id="1" ac="AC-3.29.1">Create useResponsiveView hook for table/card switching</task>
      <task id="2" ac="AC-3.29.2">Implement expandable card details with animation</task>
      <task id="3" ac="AC-3.29.3">Make PlanningHeader responsive (hamburger or stacked)</task>
      <task id="4" ac="AC-3.29.4,5">Ensure no horizontal scroll, touch-friendly (44px+ targets)</task>
    </tasks>
  </story>

  <acceptanceCriteria>
    <criterion id="AC-3.29.1">Tables convert to expandable cards on &lt;768px screens</criterion>
    <criterion id="AC-3.29.2">Card expand shows all columns, smooth animation, can collapse</criterion>
    <criterion id="AC-3.29.3">Header nav stacks or collapses to dropdown on mobile, ~60px height</criterion>
    <criterion id="AC-3.29.4">No horizontal scrolling on any planning page</criterion>
    <criterion id="AC-3.29.5">Touch targets min 44px height, 8px spacing between clickables</criterion>
  </acceptanceCriteria>

