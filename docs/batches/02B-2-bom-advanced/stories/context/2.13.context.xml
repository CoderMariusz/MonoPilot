<?xml version="1.0" encoding="UTF-8"?>
<story>
  <metadata>
    <id>2.13</id>
    <title>By-Products in BOM</title>
    <batch>02B-2</batch>
    <points>3</points>
    <effort_hours>4-5</effort_hours>
    <status>pending</status>
  </metadata>

  <description>BOM items marked as by-products with yield_percent for outputs that are not the main product.</description>

  <dependencies>
    <requires>
      <story id="2.7">BOM Items</story>
    </requires>
  </dependencies>

  <technical_context>
    <bom_item_fields>
      <field name="is_by_product" type="BOOLEAN" default="false"/>
      <field name="yield_percent" type="NUMERIC">Required if is_by_product=true, range 0-100</field>
    </bom_item_fields>

    <ui_sections>
      <section name="Input Materials">is_by_product = false</section>
      <section name="By-Products">is_by_product = true</section>
    </ui_sections>
  </technical_context>

  <acceptance_criteria>
    <ac id="2.13.1">is_by_product toggle in item form</ac>
    <ac id="2.13.2">yield_percent required when is_by_product=true</ac>
    <ac id="2.13.3">Separate sections in BOM detail: Input Materials vs By-Products</ac>
    <ac id="2.13.4">Unlimited by-products per BOM</ac>
  </acceptance_criteria>
</story>
