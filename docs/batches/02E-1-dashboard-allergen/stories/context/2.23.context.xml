<?xml version="1.0" encoding="UTF-8"?>
<story>
  <metadata>
    <id>2.23</id>
    <title>Product Dashboard</title>
    <batch>02E-1</batch>
    <points>3</points>
    <effort_hours>4-5</effort_hours>
    <status>pending</status>
  </metadata>

  <description>Grouped product dashboard showing RM/WIP/FG categories with counts and recent changes.</description>

  <dependencies>
    <requires>
      <batch id="02A-1">Products Core</batch>
    </requires>
  </dependencies>

  <technical_context>
    <api_endpoints>
      <endpoint method="GET" path="/api/technical/dashboard/products">
        <query>group_by=type, include_stats=true</query>
        <response>
          groups: [{ category, label, count, products, recent_changes }],
          overall_stats: { total_products, active_products, recent_updates }
        </response>
      </endpoint>
    </api_endpoints>

    <product_groups>
      <group code="RM" label="Raw Materials"/>
      <group code="WIP" label="Work in Progress"/>
      <group code="FG" label="Finished Goods"/>
    </product_groups>

    <components_to_create>
      <component name="ProductDashboard" path="app/technical/dashboard/components/ProductDashboard.tsx"/>
    </components_to_create>
  </technical_context>

  <acceptance_criteria>
    <ac id="2.23.1">Products grouped by RM/WIP/FG</ac>
    <ac id="2.23.2">Show count per group</ac>
    <ac id="2.23.3">Quick filters per group</ac>
    <ac id="2.23.4">Recent changes (last 7 days)</ac>
  </acceptance_criteria>
</story>
