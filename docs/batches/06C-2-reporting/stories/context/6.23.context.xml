<?xml version="1.0" encoding="UTF-8"?>
<story>
  <metadata>
    <id>6.23</id>
    <title>Quality Reports Generation</title>
    <batch>06C-2</batch>
    <status>drafted</status>
  </metadata>

  <description>Generate quality reports for stakeholders</description>

  <dependencies>
    <requires>
      <story id="6.22">Quality Dashboard</story>
    </requires>
  </dependencies>

  <technical_context>
    <frontend_routes>
      <route path="/quality/reports">Reports page</route>
    </frontend_routes>

    <api_endpoints>
      <endpoint method="POST" path="/api/quality/reports/generate">
        <description>Generate report with filters</description>
        <request>{ type: string, filters: object }</request>
      </endpoint>
    </api_endpoints>

    <report_types>
      <report>NCR Summary - by date range, severity, type</report>
      <report>Test Results Summary - by product, date</report>
      <report>Quality Hold Report - by status, date</report>
      <report>CoA Compliance Report - pending/verified/rejected</report>
      <report>Supplier Quality Performance - defect rates</report>
    </report_types>
  </technical_context>

  <acceptance_criteria>
    <ac id="1">5 report types available</ac>
    <ac id="2">Preview report before export</ac>
    <ac id="3">Filter parameters per report type</ac>
  </acceptance_criteria>

  <functional_requirements>
    <fr id="QC-FR-25">System shall generate quality reports</fr>
  </functional_requirements>
</story>
