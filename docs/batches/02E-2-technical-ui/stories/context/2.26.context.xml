<?xml version="1.0" encoding="UTF-8"?>
<story>
  <metadata>
    <id>2.26</id>
    <title>Technical Stats Cards</title>
    <batch>02E-2</batch>
    <points>2</points>
    <effort_hours>3-4</effort_hours>
    <status>pending</status>
  </metadata>

  <description>Reusable stats cards component showing key metrics with variants and trend indicators.</description>

  <technical_context>
    <components_to_create>
      <component name="TechnicalStatsCard" path="components/technical/TechnicalStatsCard.tsx">
        Stats card with title, value, trend, variant
      </component>
    </components_to_create>

    <props>
      <prop name="title" type="string" required="true"/>
      <prop name="value" type="number | string" required="true"/>
      <prop name="trend" type="string">+5%, -3%</prop>
      <prop name="variant" type="string">default, success, warning, error</prop>
      <prop name="icon" type="ReactNode"/>
    </props>

    <variants>
      <variant name="default">Slate/gray styling</variant>
      <variant name="success">Green styling</variant>
      <variant name="warning">Amber styling</variant>
      <variant name="error">Red styling</variant>
    </variants>
  </technical_context>

  <acceptance_criteria>
    <ac id="2.26.1">Reusable stats card component</ac>
    <ac id="2.26.2">Multiple variants</ac>
    <ac id="2.26.3">Trend indicators (+/-)</ac>
  </acceptance_criteria>
</story>
