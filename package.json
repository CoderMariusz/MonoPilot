{
  "name": "monopilot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd apps/frontend && pnpm dev",
    "build": "cd apps/frontend && pnpm build",
    "start": "cd apps/frontend && pnpm start",
    "lint": "cd apps/frontend && pnpm lint",
    "type-check": "cd apps/frontend && pnpm type-check",
    "clean": "rm -rf node_modules apps/frontend/node_modules apps/frontend/.next",
    "install:all": "pnpm install && cd apps/frontend && pnpm install",
    "prepare": "husky install || true",
    "pre-push": "pnpm lint",
    "seed:admin": "node scripts/seed-first-admin.mjs",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "cd apps/frontend && pnpm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report test-results/html",
    "bmad": "npx bmad-method@alpha",
    "bmad:status": "npx bmad-method@alpha status",
    "bmad:list": "npx bmad-method@alpha list",
    "bmad:update": "npx bmad-method@alpha update"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@playwright/test": "^1.49.0",
    "@supabase/supabase-js": "^2.84.0",
    "lint-staged": "^16.2.7",
    "supabase": "^2.58.5"
  }
}
