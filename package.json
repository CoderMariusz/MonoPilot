{
  "name": "monopilot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd app && pnpm dev",
    "build": "cd app && pnpm build",
    "start": "cd app && pnpm start",
    "lint": "cd app && pnpm lint",
    "type-check": "cd app && pnpm type-check",
    "clean": "rm -rf node_modules app/node_modules app/.next",
    "install:all": "pnpm install && cd app && pnpm install",
    "prepare": "husky || true",
    "test": "pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report test-results/html",
    "bmad": "npx bmad-method@alpha",
    "bmad:status": "npx bmad-method@alpha status",
    "bmad:list": "npx bmad-method@alpha list",
    "bmad:update": "npx bmad-method@alpha update"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@playwright/test": "^1.49.0",
    "supabase": "^2.58.5"
  }
}
