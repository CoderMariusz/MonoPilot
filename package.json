{
  "name": "forza-mes",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "backend:dev": "cd apps/backend && php artisan serve --host=0.0.0.0 --port=8000",
    "frontend:dev": "cd apps/frontend && pnpm dev"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
