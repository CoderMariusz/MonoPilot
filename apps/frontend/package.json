{
  "name": "forza-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 5000 -H 0.0.0.0",
    "build": "next build --no-lint",
    "start": "next start -p 5000 -H 0.0.0.0",
    "lint": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install chromium",
    "seed:test-users": "tsx scripts/seed-test-users.ts",
    "test:e2e:auth": "playwright test --grep auth",
    "test:e2e:bom": "playwright test --grep BOM",
    "test:e2e:planning": "playwright test --grep Planning",
    "test:e2e:production": "playwright test --grep Production",
    "test:e2e:warehouse": "playwright test --grep Warehouse",
    "test:e2e:scanner": "playwright test --grep Scanner",
    "test:e2e:settings": "playwright test --grep Settings",
    "test:e2e:admin": "playwright test --grep Admin",
    "test:e2e:performance": "playwright test --grep performance",
    "test:e2e:error-handling": "playwright test --grep error-handling",
    "test:e2e:components": "playwright test --grep components",
    "test:reports": "tsx scripts/generate-all-reports.ts"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "lucide-react": "^0.469.0",
    "next": "^15.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "^2.2.6",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.4",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
