{
  "name": "forza-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 5000 -H 0.0.0.0",
    "build": "next build --no-lint",
    "start": "next start -p 5000 -H 0.0.0.0",
    "lint": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "playwright:install": "playwright install chromium",
    "seed:test-users": "tsx scripts/seed-test-users.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:auth": "playwright test e2e/01-auth",
    "test:e2e:po": "playwright test e2e/02-purchase-orders",
    "test:e2e:to": "playwright test e2e/03-transfer-orders",
    "test:e2e:lp": "playwright test e2e/04-license-plates",
    "test:e2e:settings": "playwright test e2e/05-settings",
    "test:e2e:grn": "playwright test e2e/06-grn-receiving",
    "test:e2e:critical": "playwright test e2e/01-auth e2e/02-purchase-orders e2e/03-transfer-orders",
    "test:e2e:seed": "tsx e2e/seed-test-data.ts",
    "docs:update": "tsx scripts/update-docs.ts",
    "gen-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > lib/supabase/generated.types.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@types/react": "^19.0.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.0.0",
    "@zxing/browser": "^0.1.5",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "immer": "^10.2.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.469.0",
    "next": "^15.5.4",
    "papaparse": "^5.5.3",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-data-grid": "7.0.0-beta.46",
    "react-dom": "^19.0.0",
    "swr": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.56.1",
    "@types/jspdf": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.5.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.4",
    "pg": "^8.16.3",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6",
    "undici": "^7.16.0",
    "vitest": "^4.0.6"
  }
}
