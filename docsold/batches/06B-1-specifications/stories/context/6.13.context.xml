<?xml version="1.0" encoding="UTF-8"?>
<story>
  <metadata>
    <id>6.13</id>
    <title>Test History Per LP</title>
    <batch>06B-1</batch>
    <status>drafted</status>
  </metadata>

  <description>View complete test history for any LP</description>

  <dependencies>
    <requires>
      <story id="6.12">Record Test Results Against LPs</story>
    </requires>
  </dependencies>

  <technical_context>
    <api_endpoints>
      <endpoint method="GET" path="/api/quality/test-results?lp_id=X">
        <description>Get LP test history</description>
        <query_params>test_name, status, date_from, date_to</query_params>
      </endpoint>
    </api_endpoints>

    <frontend_routes>
      <route path="/warehouse/license-plates/:id">LP Detail → Test History tab</route>
    </frontend_routes>

    <components_to_create>
      <component>TestHistoryTable - columns: Date, Specification, Result, Pass/Fail, Tested by, Notes</component>
      <component>TestHistoryFilters - filter by test name, status, date</component>
    </components_to_create>
  </technical_context>

  <acceptance_criteria>
    <ac id="1">LP detail → Test History tab</ac>
    <ac id="2">Shows: Test date, Specification, Result, Pass/Fail, Tested by, Notes</ac>
    <ac id="3">Filters: test name, status, date</ac>
  </acceptance_criteria>

  <functional_requirements>
    <fr id="QC-FR-15">System shall show test history per LP</fr>
  </functional_requirements>
</story>
